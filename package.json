    "autoprefixer": "^10.4.14",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.4.9",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.25",
    "tailwindcss": "^3.3.2",
    "tsc": "^2.0.4",
    "tsc-files": "^1.1.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "next": "^13.4.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
